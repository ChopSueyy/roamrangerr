<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#181A1B"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="28dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="110dp"
                android:src="@drawable/baseline_admin_panel_settings_24"
                android:contentDescription="todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="roamranger"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#514F4F"
            app:cardCornerRadius="28dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF070707"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="welcome"
                    android:textColor="#18FFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Please login your information"
                    android:textColor="#F3EFEF"
                    tools:ignore="TextContrastCheck" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Email Address"
                    android:textColor="#FAF8F8"
                    tools:ignore="TextContrastCheck" />


                <EditText
                    android:id="@+id/signin_email"
                    android:layout_width="352dp"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:drawableEnd="@drawable/baseline_arrow_outward_24"
                    android:hint="enter your email here"
                    android:inputType="textEmailAddress"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    tools:ignore="TextContrastCheck" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Password"
                    android:textColor="#F8F7F7"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/signin_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:drawableEnd="@drawable/baseline_arrow_outward_24"
                    android:hint="enter your password here"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:alpha="0.7"
                        android:text="Remember_me"
                        android:textColor="#EFE9E9"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/my_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:onClick="s"
                        android:text="Sign up"
                        android:textColor="#F6F2F2"
                        tools:ignore="RelativeOverlap,TextContrastCheck" />


                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/Submit"
                    android:layout_width="349dp"
                    android:layout_height="59dp"
                    android:backgroundTint="#2AB0C1"
                    android:text="Submit"
                    android:textColor="#212121"
                    tools:ignore="TextContrastCheck,VisualLintButtonSize" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>
